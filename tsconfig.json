{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }],
	"paths": {
		"@/*": ["./src/*"],
		"@api/*": ["./src/api/*"],
		"@assets/*": ["./src/assets/*"],
		"@components/*": ["./src/components/*"],
		"@constants/*": ["./src/constants/*"],
		"@pages/*": ["./src/pages/*"],
		"@providers/*": ["./src/providers/*"],
		"@store/*": ["./src/store/*"],
		"@temp/*": ["./src/temp/*"],
		"@utils/*": ["./src/utils/*"],

		"@api": ["./src/api"],
		"@assets": ["./src/assets"],
		"@components": ["./src/components"],
		"@constants": ["./src/constants"],
		"@pages": ["./src/pages"],
		"@providers": ["./src/providers"],
		"@store": ["./src/store"],
		"@temp": ["./src/temp"],
		"@utils": ["./src/utils"]
	}
}
